<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout
        android:id="@+id/rl_title_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="报料赢万元奖金"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_start_video"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:paddingStart="0dp"
            android:paddingEnd="15dp"
            android:text="马上报料"
            android:textColor="#FF6A23" />

        <TextView
            android:id="@+id/tv_see_detail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="0dp"
            android:text="详细规则"
            android:textColor="#676767" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/common_divide_line" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:background="@color/common_background"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingTop="15dp"
                android:background="@color/white"
                android:layout_height="200dp">

                <com.example.pearvideoclient.content.VideoPlayerIJK
                    android:id="@+id/video_player_tech"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/iv_video_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@null"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="48dp"
                    android:background="#FFE139"
                    android:text="奖金榜"
                    android:id="@+id/tv_remark_list"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_marginStart="15dp"
                    android:background="#FFE139"
                    android:text="我的报料"
                    android:id="@+id/tv_my_video"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="48dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <View
                android:background="@color/common_divide_line"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="1px" />

            <TextView
                android:text="精选报料"
                android:background="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_video_list"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
