<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_category_list"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginEnd="72dp"
        app:tabIndicatorColor="#ED6B2D"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="#ED6B2D"
        app:tabTextColor="@color/black" />

    <ImageView
        android:id="@+id/iv_sort"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_sort_gray_24dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/tl_category_list"
        android:background="@color/common_divide_line" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_pager"
        android:layout_width="match_parent"
        android:layout_below="@id/tl_category_list"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp" />

</RelativeLayout>