<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background">

    <RelativeLayout
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <com.example.pearvideoclient.content.VideoPlayerIJK
            android:id="@+id/video_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black" />

        <include
            android:id="@+id/play_bottom_layout"
            layout="@layout/include_play_bottom"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsv_video_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/video_view">

        <include
            android:id="@+id/video_info_layout"
            layout="@layout/view_video_info_layout" />
    </android.support.v4.widget.NestedScrollView>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/loading_view"
        style="@style/AVLoadingIndicatorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible"
        app:indicatorColor="#ff0000"
        app:indicatorName="BallPulseIndicator" />
</RelativeLayout>